---
interface LocationData {
  label: string;
  city: string;
  region: string;
}

interface Props {
  contentText?: string | string[];
  imageSrc?: string;
  locationData?: LocationData;
}

const {
  contentText =
    "<strong>We're not a national agency pushing cookie-cutter solutions</strong>. We're your local Lorton neighbors who understand Northern Virginia's business landscape.\n\nEvery AI solution is custom-built for YOUR business — not a template, not a one-size-fits-all package. We've helped healthcare practices, law firms, restaurants, and retail businesses across the region save an average of $35,000 annually while increasing efficiency by 40%.\n\nPlus, with our local presence, you get same-day responses and personal attention that national competitors can't match. When you call, you talk to us — not a call center in another state.",
  imageSrc = "/img/modern-ai-technology-workspace.png",
  locationData = {
    label: "Based in",
    city: "Lorton",
    region: "Northern VA",
  }
} = Astro.props as Props;

const contentParagraphs = Array.isArray(contentText)
  ? contentText
  : contentText
      .split('\n\n')
      .map((paragraph) => paragraph.trim())
      .filter(Boolean);
---

<section
  class="relative w-full px-4 md:px-8 lg:px-20 py-20 md:py-32"
  aria-labelledby="why-choose-us-heading"
>
  <h2 id="why-choose-us-heading" class="text-3xl md:text-4xl lg:text-5xl font-normal text-center mb-12 [font-family:'Segoe_UI_Symbol-Regular',Helvetica]">
    <span class="text-white">Why Lorton Businesses Choose </span>
    <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">Binary Ideas AI</span>
  </h2>

  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Image Side -->
      <div class="relative order-2 lg:order-1">
        <div
          class="absolute inset-0 rounded-3xl blur-[20px] bg-[linear-gradient(154deg,rgba(173,70,255,0.2)_0%,rgba(43,127,255,0.2)_100%)]"
          aria-hidden="true"
        />

        <div class="relative rounded-2xl overflow-hidden border border-solid border-[#fffefe1a] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(155deg,rgba(255,255,255,0.05)_0%,rgba(255,255,255,0.02)_100%)] p-2">
          <div class="rounded-[14px] overflow-hidden aspect-[4/3] relative group cursor-pointer">
            <img
              src={imageSrc}
              alt="Modern AI technology workspace"
              class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-[linear-gradient(25deg,rgba(173,70,255,0.2)_0%,rgba(173,70,255,0)_50%,rgba(43,127,255,0.2)_100%)] pointer-events-none"
              aria-hidden="true"
            />
          </div>
        </div>

        <div
          class="absolute -bottom-4 -right-4 md:right-4 px-6 py-3 flex flex-col rounded-[14px] border border-solid border-[#fffefe33] shadow-[0px_0px_30px_#9333ea66] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(153deg,rgba(173,70,255,1)_0%,rgba(21,93,252,1)_100%)]"
          role="complementary"
          aria-label="Location information"
        >
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefecc] text-sm tracking-[0] leading-5">
            {locationData.label}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-white text-2xl tracking-[0] leading-8">
            {locationData.city}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefeb2] text-xs tracking-[0] leading-4">
            {locationData.region}
          </div>
        </div>
      </div>

      <!-- Content Side -->
      <div class="relative bg-[#fffefe0d] rounded-2xl border-[#fffefe1a] border border-solid backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] p-8 order-1 lg:order-2">
        <div
          class="absolute inset-0 rounded-2xl bg-[linear-gradient(163deg,rgba(43,127,255,0.05)_0%,rgba(173,70,255,0.05)_100%)] pointer-events-none"
          aria-hidden="true"
        />

        <div class="relative space-y-5">
          {contentParagraphs.map((paragraph) => (
            <p
              class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#d0d5db] text-base md:text-lg tracking-[0] leading-relaxed"
              set:html={paragraph}
            />
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
