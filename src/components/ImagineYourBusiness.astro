---
interface BenefitCard {
  id: string;
  icon: string;
  title: string;
  description: string;
  statistic: string;
  statisticLabel: string;
  gradientBorder: string;
  gradientBg: string;
  gradientOverlay: string;
  iconBg: string;
  statisticGradient: string;
  leftPosition: string;
}

interface Props {
  introText?: string;
  cards?: BenefitCard[];
  headingPrimary?: string;
  headingAccent?: string;
}

const {
  headingPrimary = "Imagine Your Business",
  headingAccent = "Running on Autopilot",
  introText = "What if every lead got an instant response? What if your calendar filled itself? What if your team could focus on actual growth instead of busywork? That's what AI automation does for Northern Virginia businesses â€” and we build it custom for you.",
  cards = [
    {
      id: "reclaim-time",
      icon: "/img/Reclaim 40+ Hours Weekly.svg",
      title: "Reclaim 40+ Hours Weekly",
      description:
        "Stop wasting time on data entry, follow-ups, and repetitive tasks. AI handles the grunt work 24/7 while your team focuses on growth, strategy, and actually serving customers.",
      statistic: "40%",
      statisticLabel: "more efficient",
      gradientBorder: "border-[#2b7fff33]",
      gradientBg: "bg-[linear-gradient(155deg,rgba(43,127,255,0.1)_0%,rgba(43,127,255,0)_100%)]",
      gradientOverlay: "bg-[linear-gradient(155deg,rgba(43,127,255,0)_0%,rgba(43,127,255,0.05)_100%)]",
      iconBg: "bg-[linear-gradient(145deg,rgba(43,127,255,1)_0%,rgba(0,184,219,1)_100%)]",
      statisticGradient: "bg-[linear-gradient(90deg,rgba(81,162,255,1)_0%,rgba(0,211,242,1)_100%)]",
      leftPosition: "left-0",
    },
    {
      id: "slash-costs",
      icon: "/img/icons-bar-decrease.png",
      title: "Slash Operating Costs",
      description:
        "Replace $4,000/month in labor costs with $200/month AI that never takes breaks, never calls in sick, and works 24/7/365. Most clients save $30,000+ annually in operational expenses alone.",
      statistic: "30%",
      statisticLabel: "cost reduction",
      gradientBorder: "border-[#ac46ff33]",
      gradientBg: "bg-[linear-gradient(155deg,rgba(173,70,255,0.1)_0%,rgba(173,70,255,0)_100%)]",
      gradientOverlay: "bg-[linear-gradient(155deg,rgba(173,70,255,0)_0%,rgba(173,70,255,0.05)_100%)]",
      iconBg: "bg-[linear-gradient(145deg,rgba(173,70,255,1)_0%,rgba(251,100,182,1)_100%)]",
      statisticGradient: "bg-[linear-gradient(90deg,rgba(194,122,255,1)_0%,rgba(251,100,182,1)_100%)]",
      leftPosition: "left-[435px]",
    },
    {
      id: "capture-leads",
      icon: "/img/icons-attract-customers.png",
      title: "Capture 3x More Leads",
      description:
        "Stop losing prospects because you couldn't respond fast enough. AI replies in under 60 seconds, qualifies leads automatically, and fills your calendar with customers who are ready to buy.",
      statistic: "3x",
      statisticLabel: "lead volume",
      gradientBorder: "border-[#f6329a33]",
      gradientBg: "bg-[linear-gradient(155deg,rgba(246,51,154,0.1)_0%,rgba(246,51,154,0)_100%)]",
      gradientOverlay: "bg-[linear-gradient(155deg,rgba(246,51,154,0)_0%,rgba(246,51,154,0.05)_100%)]",
      iconBg: "bg-[linear-gradient(145deg,rgba(246,51,154,1)_0%,rgba(255,32,86,1)_100%)]",
      statisticGradient: "bg-[linear-gradient(90deg,rgba(251,100,182,1)_0%,rgba(255,99,126,1)_100%)]",
      leftPosition: "left-[869px]",
    },
  ],
} = Astro.props;
---

<section class="relative w-full px-4 md:px-8 lg:px-20 py-16 md:py-24">
  <h2 class="text-3xl md:text-4xl lg:text-5xl font-normal text-center mb-8 [font-family:'Segoe_UI_Symbol-Regular',Helvetica]">
    <span class="text-white">{headingPrimary} </span>
    <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
      {headingAccent}
    </span>
  </h2>

  <p class="max-w-4xl mx-auto [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#99a1ae] text-base md:text-lg text-center tracking-[0] leading-7 mb-12" set:html={introText.split('\n').join('<br />')} />

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
  {cards.map((card) => (
    <article
      class={`relative p-8 rounded-2xl overflow-hidden ${card.gradientBorder} ${card.gradientBg} border border-solid backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] flex flex-col`}
    >
      <div class={`absolute inset-0 ${card.gradientOverlay} pointer-events-none`} />

      <div
        class={`relative w-16 h-16 flex items-center justify-center rounded-[14px] overflow-hidden shadow-[0px_4px_6px_-4px_#0000001a,0px_10px_15px_-3px_#0000001a] mb-4 ${card.iconBg || 'bg-gradient-to-br from-purple-500 to-pink-500'}`}
      >
        <img
          class="w-10 h-10 md:w-12 md:h-12 object-contain"
          alt={card.title}
          src={card.icon}
        />
      </div>

      <h3 class="relative [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-white text-2xl tracking-[0] leading-8 mb-4">
        {card.title}
      </h3>

      <p
        class="relative [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#99a1ae] text-base tracking-[0] leading-[26px] mb-6 flex-grow"
        set:html={card.description.split('\n').join('<br />')}
      />

      <div class="relative flex items-baseline gap-2">
        <div
          class={`${card.statisticGradient} [-webkit-background-clip:text] bg-clip-text [-webkit-text-fill-color:transparent] [text-fill-color:transparent] [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-transparent text-4xl tracking-[0] leading-10`}
        >
          {card.statistic}
        </div>

        <div
          class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#697282] text-sm tracking-[0] leading-6"
        >
          {card.statisticLabel}
        </div>
      </div>
    </article>
  ))}
  </div>
</section>

