---
interface Props {
  mainText?: string;
  subText?: string;
}

const {
  mainText = "Binary Ideas AI - Northern Virginia's Premier AI Automation Agency",
  subText = "Transforming businesses with intelligent automation"
} = Astro.props;
---

<footer class="relative w-full px-4 md:px-8 py-12 bg-transparent border-t border-solid border-[#fffefe1a]">
  <div class="max-w-7xl mx-auto flex flex-col items-center gap-2 text-center">
    <p class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#697282] text-base tracking-[0] leading-6">
      {mainText}
    </p>
    <p class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#697282] text-sm tracking-[0] leading-5">
      {subText}
    </p>
  </div>
</footer>
