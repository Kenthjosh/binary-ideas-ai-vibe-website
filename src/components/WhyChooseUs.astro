---
interface LocationData {
  label: string;
  city: string;
  region: string;
}

interface Props {
  contentText?: string;
  imageSrc?: string;
  locationData?: LocationData;
}

const {
  contentText = "As a local Lorton-based agency, we bring deep understanding of Northern Virginia's business landscape. Our custom solutions are built specifically for your needs, not one-size-fits-all templates. We've helped dozens of local businesses increase efficiency by 40% and reduce costs by 30% on average. Our proven track record includes successful implementations for healthcare practices, law firms, restaurants, and retail businesses across the region. Plus, with our local presence, you get fast response times and personal attention that national competitors can't match.",
  imageSrc = "/img/modern-ai-technology-workspace.png",
  locationData = {
    label: "Based in",
    city: "Lorton",
    region: "Northern VA",
  }
} = Astro.props;
---

<section
  class="relative w-full px-4 md:px-8 lg:px-20 py-16 md:py-24"
  aria-labelledby="why-choose-us-heading"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Image Side -->
      <div class="relative order-2 lg:order-1">
        <div
          class="absolute inset-0 rounded-3xl blur-[20px] bg-[linear-gradient(154deg,rgba(173,70,255,0.2)_0%,rgba(43,127,255,0.2)_100%)]"
          aria-hidden="true"
        />

        <div class="relative rounded-2xl overflow-hidden border border-solid border-[#fffefe1a] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(155deg,rgba(255,255,255,0.05)_0%,rgba(255,255,255,0.02)_100%)] p-2">
          <div class={`rounded-[14px] overflow-hidden bg-[url(${imageSrc})] bg-cover bg-center aspect-[4/3]`}>
            <div
              class="w-full h-full bg-[linear-gradient(25deg,rgba(173,70,255,0.2)_0%,rgba(173,70,255,0)_50%,rgba(43,127,255,0.2)_100%)]"
              aria-hidden="true"
            />
          </div>
        </div>

        <div
          class="absolute -bottom-4 -right-4 md:right-4 px-6 py-3 flex flex-col rounded-[14px] border border-solid border-[#fffefe33] shadow-[0px_0px_30px_#9333ea66] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(153deg,rgba(173,70,255,1)_0%,rgba(21,93,252,1)_100%)]"
          role="complementary"
          aria-label="Location information"
        >
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefecc] text-sm tracking-[0] leading-5">
            {locationData.label}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-white text-2xl tracking-[0] leading-8">
            {locationData.city}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefeb2] text-xs tracking-[0] leading-4">
            {locationData.region}
          </div>
        </div>
      </div>

      <!-- Content Side -->
      <div class="relative bg-[#fffefe0d] rounded-2xl border-[#fffefe1a] border border-solid backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] p-8 order-1 lg:order-2">
        <div
          class="absolute inset-0 rounded-2xl bg-[linear-gradient(163deg,rgba(43,127,255,0.05)_0%,rgba(173,70,255,0.05)_100%)] pointer-events-none"
          aria-hidden="true"
        />

        <p class="relative [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#d0d5db] text-base md:text-lg tracking-[0] leading-relaxed" set:html={contentText.split('\n').join('<br />')} />
      </div>
    </div>
  </div>
</section>
