---
interface LocationData {
  basedIn: string;
  city: string;
  region: string;
}

interface ContentData {
  description: string | string[];
  additionalInfo: string;
}

interface ImageConfig {
  src: string;
  alt: string;
}

interface Props {
  titleLeading?: string;
  titleHighlight?: string;
  location?: LocationData;
  content?: ContentData;
  logo?: ImageConfig;
}

const defaultLocation: LocationData = {
  basedIn: "Based in",
  city: "Lorton",
  region: "Northern VA"
};

const defaultContent: ContentData = {
  description: [
    "As a local Northern Virginia agency based in Lorton, we understand the unique needs of businesses in our region. We don't offer one-size-fits-all solutions â€“ every Voice AI Agent we create is custom-built for your specific business requirements."
  ],
  additionalInfo:
    "Our ongoing support and optimization ensure your system continues to improve over time, and our proven track record with local businesses means you can trust us to deliver results that matter to your bottom line."
};

const defaultLogo: ImageConfig = {
  src: "/img/bi-ai-logo-portrait-white-2x-1-new.png",
  alt: "Binary Ideas AI symbol"
};

const {
  titleLeading = "Why Choose",
  titleHighlight = "Binary Ideas AI",
  location = defaultLocation,
  content = defaultContent,
  logo = defaultLogo
} = Astro.props as Props;

const descriptionParagraphs = Array.isArray(content.description)
  ? content.description
  : [content.description];
---

<section
  class="relative mx-auto mt-24 max-w-6xl px-6 py-24"
  aria-labelledby="why-choose-heading"
>
  <header class="flex flex-col items-center gap-3 text-center">
    <h2
      id="why-choose-heading"
      class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-3xl font-semibold leading-tight text-white sm:text-4xl md:text-[54px] md:leading-[64px]"
    >
      <span>{titleLeading}</span>
      <span class="mx-2 text-transparent bg-clip-text bg-[linear-gradient(90deg,#c084fc_0%,#60a5fa_100%)]">
        {titleHighlight}
      </span>
    </h2>
  </header>

  <div class="mt-16 grid gap-12 lg:grid-cols-[minmax(0,520px)_1fr] lg:items-center">
    <div class="relative overflow-visible rounded-[32px] border border-white/20 bg-[linear-gradient(155deg,rgba(63,31,122,0.92)_0%,rgba(9,16,32,0.96)_100%)] px-14 pt-20 pb-24 shadow-[0_48px_115px_rgba(13,10,32,0.58)] before:content-[''] before:absolute before:-inset-6 before:-z-10 before:rounded-[44px] before:bg-[radial-gradient(circle_at_25%_15%,rgba(141,82,255,0.55)_0%,rgba(13,13,30,0)_70%)] before:blur-[90px] after:content-[''] after:absolute after:-inset-12 after:-z-20 after:rounded-[52px] after:bg-[radial-gradient(circle_at_80%_110%,rgba(59,130,246,0.32)_0%,rgba(9,12,28,0)_75%)] after:blur-[120px]">
      <div class="pointer-events-none absolute inset-0 rounded-[32px] opacity-85 [background:radial-gradient(circle_at_20%_16%,rgba(174,101,255,0.55)_0%,rgba(13,16,32,0)_68%)]" aria-hidden="true" />
      <div class="pointer-events-none absolute inset-0 rounded-[32px] opacity-50 [background:radial-gradient(circle_at_82%_88%,rgba(64,138,255,0.32)_0%,rgba(14,17,36,0)_72%)]" aria-hidden="true" />
      <div class="pointer-events-none absolute inset-[1px] rounded-[30px] border border-white/15" aria-hidden="true" />

      <div class="relative flex items-center justify-center">        
          <img
            class="h-[90%] w-[90%] object-contain drop-shadow-[0_22px_48px_rgba(0,0,0,0.35)]"
            alt={logo.alt}
            src={logo.src}
          />
      </div>

      <div class="absolute -bottom-10 -right-10 flex h-[128px] w-[138px] flex-col items-center justify-center rounded-[24px] border border-white/40 bg-[linear-gradient(135deg,#8b5cf6_0%,#2563eb_100%)] shadow-[0_26px_48px_rgba(84,63,242,0.55)] backdrop-blur-[8px] z-[5]" style="transform: translate(-10px,-10px);">
        <span class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-[12px] tracking-[0.08em] text-white/88">
          {location.basedIn}
        </span>
        <span class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-[30px] font-semibold leading-[34px] text-white drop-shadow-[0_3px_12px_rgba(22,19,51,0.4)]">
          {location.city}
        </span>
        <span class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-[11px] uppercase tracking-[0.18em] text-white/78">
          {location.region}
        </span>
      </div>
    </div>

    <div class="relative overflow-hidden rounded-[34px] border border-[#ffffff17] bg-[linear-gradient(145deg,rgba(25,27,45,0.92)_0%,rgba(16,17,33,0.95)_100%)] px-12 py-12 shadow-[0_38px_85px_rgba(10,10,20,0.55)]">
      <div class="pointer-events-none absolute inset-0 rounded-[34px] opacity-70 [background:radial-gradient(circle_at_top_right,rgba(120,64,255,0.25)_0%,rgba(19,20,37,0)_65%)]" aria-hidden="true" />
      <div class="relative space-y-5">
        {descriptionParagraphs.map((paragraph) => (
          <p class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-base leading-8 text-[#d9deed] sm:text-lg">
            {paragraph}
          </p>
        ))}
        <p class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] text-base leading-8 text-[#ffffffcc] sm:text-lg">
          {content.additionalInfo}
        </p>
      </div>
    </div>
  </div>
</section>

