---
interface IndustryTag {
  label: string;
  width: string;
  textWidth: string;
}

interface Props {
  description?: string;
  imageSrc?: string;
  statLabel?: string;
  statValue?: string;
  statSubtext?: string;
  industries?: IndustryTag[];
}

const {
  description = "From 5-person startups to 200-employee firms, we help Northern Virginia businesses stop losing money to manual work. Whether you're a healthcare practice drowning in appointment calls, a law firm buried in document review, or a restaurant losing reservations â€” we build AI that solves YOUR specific problems.",
  imageSrc = "/img/local-northern-virginia-storefront.png",
  statLabel = "Saving",
  statValue = "$500k+",
  statSubtext = "Annual Client Savings",
  industries = [
    { label: "Healthcare", width: "w-[84px]", textWidth: "w-[58.04px]" },
    { label: "Legal", width: "w-[55px]", textWidth: "w-[29.29px]" },
    { label: "Retail", width: "w-14", textWidth: "w-[30.62px]" },
    { label: "Restaurants", width: "w-[90px]", textWidth: "w-[64.62px]" },
    { label: "Real Estate", width: "w-[87px]", textWidth: "w-[61.54px]" },
    { label: "Contractors", width: "w-[88px]", textWidth: "w-[62.11px]" },
  ]
} = Astro.props;
---

<section
  class="relative w-full px-4 md:px-8 lg:px-20 py-20 md:py-32"
  aria-labelledby="features-heading"
>
  <h2 id="features-heading" class="text-3xl md:text-4xl lg:text-5xl font-normal text-center mb-12 [font-family:'Segoe_UI_Symbol-Regular',Helvetica]">
    <span class="text-white">Serving 100+ </span>
    <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">Northern Virginia Businesses</span>
  </h2>

  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Image Side -->
      <div class="relative">
        <div
          class="absolute inset-0 rounded-3xl blur-[20px] bg-[linear-gradient(154deg,rgba(43,127,255,0.2)_0%,rgba(173,70,255,0.2)_100%)]"
          aria-hidden="true"
        />

        <div class="relative rounded-2xl overflow-hidden border border-solid border-[#fffefe1a] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(155deg,rgba(255,255,255,0.05)_0%,rgba(255,255,255,0.02)_100%)] p-2">
          <div class="rounded-[14px] overflow-hidden aspect-[4/3] relative group cursor-pointer">
            <img
              src={imageSrc}
              alt="Northern Virginia storefront"
              class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110"
            />
            <div
              class="absolute inset-0 bg-[linear-gradient(25deg,rgba(43,127,255,0.2)_0%,rgba(43,127,255,0)_50%,rgba(173,70,255,0.2)_100%)] pointer-events-none"
              aria-hidden="true"
            />
          </div>
        </div>

        <div
          class="absolute -bottom-4 -right-4 md:right-4 px-6 py-3 flex flex-col rounded-[14px] border border-solid border-[#fffefe33] shadow-[0px_0px_30px_#3b82f666] backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] bg-[linear-gradient(159deg,rgba(43,127,255,1)_0%,rgba(152,16,250,1)_100%)]"
          role="figure"
          aria-label={`${statLabel} over ${statValue} ${statSubtext.toLowerCase()}`}
        >
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefecc] text-sm tracking-[0] leading-5">
            {statLabel}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-white text-2xl tracking-[0] leading-8">
            {statValue}
          </div>
          <div class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#fffefeb2] text-xs tracking-[0] leading-4">
            {statSubtext}
          </div>
        </div>
      </div>

      <!-- Content Side -->
      <div class="relative bg-[#fffefe0d] rounded-2xl border-[#fffefe1a] border border-solid backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)] p-8">
        <div
          class="absolute inset-0 rounded-2xl bg-[linear-gradient(160deg,rgba(43,127,255,0.05)_0%,rgba(173,70,255,0.05)_100%)] pointer-events-none"
          aria-hidden="true"
        />

        <p class="relative [font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#d0d5db] text-base md:text-lg tracking-[0] leading-relaxed mb-8" set:html={description.split('\n').join('<br />')} />

        <div
          class="relative flex flex-wrap gap-2"
          role="list"
          aria-label="Industries served"
        >
          {industries.map((tag) => (
            <div
              class="px-4 py-2 flex items-center justify-center rounded-full border-[#2b7fff4c] bg-[linear-gradient(90deg,rgba(43,127,255,0.2)_0%,rgba(173,70,255,0.2)_100%)] border border-solid backdrop-blur-sm backdrop-brightness-[100%] [-webkit-backdrop-filter:blur(4px)_brightness(100%)]"
              role="listitem"
            >
              <span
                class="[font-family:'Segoe_UI_Symbol-Regular',Helvetica] font-normal text-[#8dc5ff] text-xs tracking-[0] leading-4 whitespace-nowrap"
              >
                {tag.label}
              </span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
